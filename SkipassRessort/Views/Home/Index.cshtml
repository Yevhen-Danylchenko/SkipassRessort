@model List<SkipassRessort.ViewModel.SkipassViewModel>

@{
    ViewBag.Title = "Продаж скіпасів";
}

<div class="container">
    <header>
        <h1>Онлайн продаж скіпасів</h1>
        <p class="par">Обирай курорт та купуй квитки без черг!</p>
    </header>

    <section class="categories">
        @foreach (var skipass in Model)
        {
            <div class="category-card">
                <img src="@skipass.ImageUrl" alt="@skipass.ResortName" />
                <h3>@skipass.ResortName</h3>
                <p>@skipass.Description</p>
                <p class="price">@skipass.Price грн</p>
                <p>Тривалість: @skipass.Duration</p>
                <div class="admin-actions">
                    <form asp-controller="Home" asp-action="Buy" method="post">
                        <input type="hidden" name="ResortName" value="@skipass.ResortName" />
                        <input type="hidden" name="Price" value="@skipass.Price" />
                        <input type="hidden" name="Duration" value="@skipass.Duration" />
                        <button type="submit" class="btn">Купити</button>
                    </form>
                </div>
            </div>
        }
    </section>
</div>

@section Footer {
    <p>© 2026 SkiPass Service — контакти: support@skipass.com</p>
}
